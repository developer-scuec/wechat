/* pages/IndexComponent.wxss */
.items{
  width: 100%;
  height: 100%;
}
.container_item{
  width: 100%;
  height: 800rpx;
  background-color: #FAFAFA;

}
.c_item_word{
  width: 100%;
  height: 250rpx;
  text-align: center;
  font-family: Google Sans;
  color: #7e7e7e;
}
.word1{
  font-size: 30rpx;
  padding-top: 40rpx;
}
.word2{
  font-size: 40rpx;
  margin-top: 40rpx;
}
.c_item_img{
  width: 100%;
  height: 550rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;

}
.c_iem_image{
  height: 100%;
}
.back_box{
  width: 60%;
  height: 100rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin-top: 25rpx;
  color: #4b433f;
}
.back_button{
  width: 50%;
  height: 60rpx;
  margin: 0 auto;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border: 2.5px solid #d6d5d7;
  border-radius: 5px 5px 5px;
}

