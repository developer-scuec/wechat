/**index.wxss**/
/* @import "/Component/style/font.wxss"; */
page{
    background-color: white;
}
.show_index{
  position: absolute;
  width: 100%;
  height: 100%;
}



.cart-box{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color:rgba(0,0,0,0.2);
  z-index: 8;
}
.cart{
  width: 70%;
  height: 700rpx;
  background-color:white;
  position: fixed;
  left: 5%;
  color: #3c4043;
  z-index: 9;
}
.title{
  font-family: Google Sans;
  font-size: 40rpx;
  display: inline-flex;
  align-items: center;
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.login_button{
  width: 80%;
  height: 100rpx;
  margin-left: 50rpx;
  margin-top: 40rpx;
  /* border: 1px solid #dadada; */
  box-shadow: 1rpx 1rpx 15rpx 1rpx #dadada;
  border-radius: 2px 2px 2px 2px;
}
.login_icon{
  width: 25%;
  height: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  float: left;
}
.login_img{
  width: 50rpx;
  height: 50rpx;
}
.login_text{
  width: 75%;
  height: 100%;
  float: left;
  display: inline-flex;

  align-items: center;
  font-size: 30rpx;
  font-family: Google Sans;

}


.item_button{
  width: 80%;
  height: 50rpx;
  margin-left: 50rpx;
  margin-top: 40rpx;
}
.item_icon{
  width: 25%;
  height: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  float: left;
}
.item_img{
 
  height: 50rpx;
}
.item_text{
  width: 40%;
  height: 100%;
  float: left;
  display: inline-flex;
  align-items: center;
  font-size: 30rpx;
  margin-left: 20rpx;
  font-family: Google Sans Regular;

}
.show_list{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #fafafa;
}
.list_items{
  width: 100%;
  height: 60%;
  background-color: white;
}
.list_item{
  width: 100%;
  height: 30%;
  display: inline-flex;
  align-items: center;
  margin-top: 50rpx;
}
.list_item1{
  width: 50%;
  height: 100%;
}
.list_item_image{
  width: 100%;
  height: 65%;
}
.item_image{
  height: 65%;
}
.list_item_word{
  margin-top: 15rpx;
  font-size: 40rpx;
  font-family: Google Sans Regular;
  text-align: center;
  width: 100%;
}