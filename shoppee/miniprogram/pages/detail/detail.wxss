/* pages/detail/detail.wxss */
#page{
  width: 100%;
  background-color: white;
}
.show-images{
  width: 100%;
  height: 500rpx;

  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.img{
  height: 500rpx;
}
.name{
  width: 92%;

  margin: 0 auto;
  margin-top: 25rpx;
  font-size: 28rpx;
}
.price{
  width: 92%;

  margin: 0 auto;
  margin-top: 25rpx;
  font-size: 32rpx;
}
.time{
  width: 92%;
  padding-bottom: 25rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 25rpx;
}

.nums{
  width: 100%;
  height: 75rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: white;
}
.myWord{
  float: left;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  margin-left: 25rpx;

}
.next{
  float: right;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
  font-size: 25rpx;
}
.nextImg{
  width: 35rpx;
  height: 35rpx;
}
.back{
  background-color: white;
  width: 100%;
  height: 100rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.word{
  width: 92%;
  margin: 0 auto;
  font-size: 25rpx;
}
.end{
  width: 95%;
  height: 70rpx;
  margin: 0 auto;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx 5rpx 5rpx 5rpx;
  margin-top: 25rpx;
  font-size: 26rpx;

}
.buy{
  background-color: #2962ca;
  color: white;
}
.car,.add{
  background-color: white;
  color: #2962ca;
}