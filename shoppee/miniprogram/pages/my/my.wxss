/* pages/my/my.wxss */
#page{
  width: 100%;
  height: 100%;
  position: absolute;
}
#scoll-page{
  width: 100%;
  height: 100%;
  background-color: #f8f7f3;
  border-top: 2px solid #9fc948;
 
}
#personInfo{
  width: 100%;
  height: 170rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-top: 0.5px solid rgba(0, 0, 0, 0.253);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.253);
  
}
#headImgView{
  width: 120rpx;
  height: 120rpx;
  background-color: #f8f7f3;
  margin-left: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
#headImg{
  width: 120rpx;
  height: 120rpx;
}
#loginButton{
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  background:none;
}
#loginButton::after{
    border:none;
}
.wordInfo{
  margin-left: 20rpx;
  font-size: 30rpx;
}
#address{
  color: #2962ca;
  
}
#mygoods{
  margin-top: 25rpx;
}
.goods{
  background-color: white;
  height: 120rpx;
  width: 100%;
  border-top: 0.5px solid rgba(0, 0, 0, 0.253);

}
.myWord{
  float: left;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  padding-left:50rpx;
}
.next{
  float: right;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.nextImg{
  width: 50rpx;
  height: 50rpx;
}
.myOrder{
  background-color: white;
  height: 120rpx;
  width: 100%;
  border-top: 0.5px solid rgba(0, 0, 0, 0.253);
}
#lookAll{
  float: right;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  font-size: 27rpx;
  color: #2962ca;
}
.show{
  width: 100%;
  height: 450rpx;
  background-color:white;
}
#showItem{
  height: 450rpx;
 
}
#fatheritems{
  display: inline-flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
#item{
  margin-left: 40rpx;
}
.items{
  width: 650rpx;
  height: 350rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  border-radius: 15rpx;
  box-shadow: 10px 5px 20px  #a8a5a5;
  display: inline-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  
}
.itemImg{
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
}
.itemWord{
  width: 400rpx;
  margin-left: 40rpx;
  font-size: 20rpx;
}
#shopVerify{
  margin-top: 50rpx;
}
#end{
  width: 100%;
  height: 1000rpx;
}
.endWord{
  color: #2962ca;
  font-size: 25rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}
.annoce{
  font-size: 20rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}